{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Streamlit App",
            "type": "python",
            "request": "launch",
            "program": "${professionalChatbot}/venv/bin/streamlit",
            "args": [
                "run",
                "app.py"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${professionalChatbot}/src"
            }
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${professionalChatbot}/src"
            }
        }
    ]
}